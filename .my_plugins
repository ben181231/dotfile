# gitignore.io CLI
function gi() { curl -L -s https://www.gitignore.io/api/$@ ;}

# hub CLI
eval "$(hub alias -s)"

# pyenv
if which pyenv > /dev/null; then eval "$(pyenv init -)"; fi

# direnv
if which direnv > /dev/null; then eval "$(direnv hook zsh)"; fi

# fasd
if which fasd > /dev/null; then eval "$(fasd --init auto)"; fi

# php from brew
export PATH="$(brew --prefix php)/bin:$PATH"

# anyenv
if which anyenv > /dev/null; then alias getanyenv='eval "$(anyenv init -)"'; fi

# Minikube
if [ $commands[minikube] ]; then
  source <(minikube completion zsh)
fi

# GCloud CLI
export GCLOUD_HOME=$HOME/gcloud

## Auto Completion
if [ -f "$GCLOUD_HOME/path.zsh.inc" ]; then source "$GCLOUD_HOME/path.zsh.inc"; fi
if [ -f "$GCLOUD_HOME/completion.zsh.inc" ]; then source "$GCLOUD_HOME/completion.zsh.inc"; fi

## App Engine
if [ -e "$GCLOUD_HOME/platform/google_appengine" ]; then PATH="$GCLOUD_HOME/platform/google_appengine:$PATH"; fi

