# Don't display the copyright page
startup_message off

# Define command characters
escape ^kk

# Define scrollback buffer
defscrollback 10000

# Define window caption
caption always "%?%{kg}%-Lw%?%{r}%n*%f %t%?(%u)%?%?%{k}%+Lw%? %= %{d}"

# Show status line for whole screen
hardstatus on
hardstatus alwayslastline
hardstatus string "%{+b by} %=[$LOGNAME@%H]-[%C %a]"

# Some key binding
bind ^j focus down
bind ^k focus up
bind \033 quit

# Create 2 screens by default
screen
screen
select 0

